@model TutorManager.Models.UserModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout_Register_or_Login";
}

<div class="container">
    <main role="main" class="pb-3">
         @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <form>

                <fieldset>
                    <legend style="padding-top : 10px">Log In</legend>
                    <div>
                        @Html.LabelFor(model => model.Email, "Email", new { @for = "exampleInputEmail1", @class = "form-label mt-4" })
                        @Html.TextBoxFor(model => model.Email, "", new { @class = "form-control", @id = "exampleInputEmail1", placeholder = "Enter email" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "badge badge-danger" })
                        @if (ViewBag.error != null)
                        {
                            <span class="badge badge-danger">@ViewBag.error</span>
                        }
                    </div>
                    <div>
                        @Html.LabelFor(model => model.Password, "Password", new { @for = "exampleInputPassword1", @class = "form-label mt-4" })
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @id = "exampleInputPassword1", @placeholder = "Set your password", @autocomplete = "off" })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "badge badge-danger" })
                    </div>
                    <div class="form-group">
                        <input type="submit" name="submit" class="btn btn-primary" value="Log In" />
                    </div>
                </fieldset>

            </form>
        }
    </main>
</div>